<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_marginLeft="10dp"
    android:background="@color/colorAccent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/enteredName"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/person_icon"
                android:hint="@string/name"

                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="73dp"
                tools:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/address"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/mail_icon"
                android:hint="@string/enter_your_address"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/mail_icon"
                tools:layout_editor_absoluteY="74dp"
                tools:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/Celnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/phone_icon"
                android:ems="10"
                android:hint="Enter your Phone"
                android:inputType="phone"
                app:srcCompat="@drawable/phone_icon" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_action_name"
                android:text="Enter your Source address"
                android:textAllCaps="false"
                android:textStyle="bold|italic"
                app:fontFamily="casual"
                app:srcCompat="@drawable/ic_action_name" />

            <fragment
                android:id="@+id/place_autocomplete_fragment1"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_action_name"
                android:text="Enter your Destination address"
                android:textStyle="bold|italic"
                app:fontFamily="casual"
                app:srcCompat="@drawable/ic_action_name" />

            <fragment
                android:id="@+id/place_autocomplete_fragment2"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/place_autocomplete_fragment1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/getLocationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="get location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/stopUpdateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="Stop Update"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/getLocationButton" />

        </TableRow>

        <TableRow>

        </TableRow>
    </TableLayout>

    <android.support.v7.widget.CardView
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:background="@drawable/places_ic_clear"
        app:cardBackgroundColor="@drawable/places_ic_clear"
        app:cardCornerRadius="24dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="386dp">

        <TextView
            android:id="@+id/addRide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical|center"
            android:text="ADD"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="36sp" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>